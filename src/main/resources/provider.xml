<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="hello-world-provider"  />

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://127.0.0.1:21811"  />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"  transporter="netty4"  />

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.fanyin.dubbo.dubbo.service.FirstService" executes="100" ref="firstService" timeout="360000"/>
    <!-- 和本地bean一样实现服务 -->
    <bean id="firstService" class="com.fanyin.dubbo.dubbo.service.impl.FirstServiceImpl" />

    <dubbo:service interface="com.fanyin.dubbo.dubbo.service.GlobalService" executes="100" ref="globalService" timeout="360000"/>

    <bean id="globalService" class="com.fanyin.dubbo.dubbo.service.impl.GlobalServiceImpl" />

    <!--服务端不泛化-->
    <bean class="com.fanyin.dubbo.dubbo.service.impl.ProviderNotGenerateImpl" id="providerNotGenerate" />
    <dubbo:service interface="com.fanyin.dubbo.dubbo.service.ProviderNotGenerate" ref="providerNotGenerate"/>

    <!--服务端泛化-->
    <bean class="com.fanyin.dubbo.dubbo.service.impl.ProviderGenerateImpl" id="providerGenerate" />
    <dubbo:service interface="com.fanyin.dubbo.dubbo.service.CustomGenerate" ref="providerGenerate"/>


</beans>